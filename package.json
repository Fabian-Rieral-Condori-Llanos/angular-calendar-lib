{
  "name": "angular-calendar-lib-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build:lib": "ng build ng-calendar-formatter",
    "build:lib:watch": "ng build ng-calendar-formatter --watch",
    "test:lib": "ng test ng-calendar-formatter --watch=false --browsers=ChromeHeadless",
    "test:lib:watch": "ng test ng-calendar-formatter",
    "test:lib:coverage": "ng test ng-calendar-formatter --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:app": "ng test example-app --watch=false --browsers=ChromeHeadless",
    "build:example": "ng build example-app",
    "serve:example": "ng serve example-app --port 4201",
    "build:all": "npm run build:lib && npm run build:example",
    "pack:lib": "cd dist/ng-calendar-formatter && npm pack",
    "publish:lib": "cd dist/ng-calendar-formatter && npm publish --access public",
    "version:patch": "npm version patch && npm run build:lib && npm run publish:lib",
    "version:minor": "npm version minor && npm run build:lib && npm run publish:lib",
    "version:major": "npm version major && npm run build:lib && npm run publish:lib",
    "lint": "ng lint",
    "ci:test": "npm run test:lib && npm run test:app",
    "ci:build": "npm run build:all"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "moment": "^2.30.1",
    "moment-hijri": "^3.0.0",
    "moment-jalaali": "^0.10.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "@types/moment": "^2.11.29",
    "@types/moment-hijri": "^2.1.4",
    "@types/moment-jalaali": "^0.7.9",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "typescript": "~5.9.2"
  }
}